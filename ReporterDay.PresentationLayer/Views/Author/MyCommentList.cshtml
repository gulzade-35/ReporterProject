@model List<ReporterDay.EntityLayer.Entities.Comment>

@{
    ViewData["Title"] = "MyCommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Yorum Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Yorum</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CommentId</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CommentDetail</strong></td>
                            <td>
                                <a class="btn btn-outline-danger" href="/Author/DeleteComment/@item.CommentId"><i class="bx bx-trash me-1"></i> Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <br />
</div>

